@using LigosGame.Constants

<MudDialog>
    <TitleContent>
        @Titulo
    </TitleContent>
    <DialogContent>
        @Mensagem
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Secondary" OnClick="Cancel" StartIcon="@Icons.Material.Filled.Close" Variant="Variant.Filled">@NomeBtnCancelar</MudButton>
        <MudButton Color="Color.Primary" OnClick="Confirmar" StartIcon="@Icons.Material.Filled.Check" Variant="Variant.Filled">@NomeBtnConfirmar</MudButton>
    </DialogActions>
</MudDialog>


@code {
    #region Declaration

    [CascadingParameter] private MudDialogInstance MudDialog { get; set; }

    [Parameter] public string Titulo { get; set; } = "Alerta";
    [Parameter] public string Mensagem { get; set; }

    [Parameter] public string NomeBtnConfirmar { get; set; } = "Confirmar";
    [Parameter] public string NomeBtnCancelar { get; set; } = "Cancelar";

    #endregion

    #region Functions

    private async Task Confirmar()
    {
        MudDialog.Close(DialogResult.Ok(true));
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }

    #endregion
}
